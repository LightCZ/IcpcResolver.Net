<UserControl x:Class="IcpcResolver.Net.UserControl.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IcpcResolver.Net.UserControl"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LabelWidth}"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               Content="{Binding LabelName}"
               VerticalContentAlignment="Center"/>

        <TextBox Grid.Column="1"
                 Text="{Binding PathSelected}"
                 TextWrapping="NoWrap"
                 VerticalContentAlignment="Center"/>

        <Button Grid.Column="2"
                Content="Select"
                Click="ButtonSelect_OnClick"
                Background="Transparent"/>
    </Grid>
</UserControl>
