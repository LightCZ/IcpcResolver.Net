<UserControl x:Class="IcpcResolver.Net.UserControl.Problem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:IcpcResolver.Net.UserControl"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             Margin="0 0 10 0"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <!-- background color -->
    <Border Background="{Binding Color}" CornerRadius="10">
        <!-- border brush color -->
        <!-- NOTE: use Background and BorderBrush in one Border tag will cause a white thin border inside Border -->
        <Border BorderBrush="{Binding BorderColor}"
                BorderThickness="3 4 3 4"
                VerticalAlignment="Center"
                CornerRadius="8">
            <!-- submission info -->
            <Label Content="{Binding Path=LabelOrContent}"
                   Foreground="{Binding Path=FontColor}"
                   FontSize="20"
                   FontWeight="Black"
                   HorizontalAlignment="Center"/>
        </Border>
    </Border>
</UserControl>
